<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <ImageButton
        android:id="@+id/ib_matematica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_row="0"
        android:layout_column="0" />
    <TextView
        android:id="@+id/tv_matematica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matemática"
        android:layout_row="1"
        android:layout_column="0"/>

    <ImageButton
        android:id="@+id/ib_portugues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mrg_esq_imagens"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_row="0"
        android:layout_column="1"/>
    <TextView
        android:id="@+id/tv_portugues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mrg_esq_imagens"
        android:text="Português"
        android:layout_row="1"
        android:layout_column="1"/>

    <ImageButton
        android:id="@+id/ib_mobileAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mrg_esq_imagens"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_row="0"
        android:layout_column="2"/>
    <TextView
        android:id="@+id/tv_mobileAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mrg_esq_imagens"
        android:text="Mobile Android"
        android:layout_row="1"
        android:layout_column="2"/>

    <ImageButton
        android:id="@+id/ib_fisica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mrg_esq_imagens"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_row="0"
        android:layout_column="3"/>
    <TextView
        android:id="@+id/tv_fisica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mrg_esq_imagens"
        android:text="Física"
        android:layout_row="1"
        android:layout_column="3"/>
</GridLayout>